{
  "name": "Web Vitals",
  "version": "2.0.0",
  "manifest_version": 4,
  "description": "Measure metrics for a healthy site, Server Info, Web info, SEO Analysis & Accessibility checks.",
  "homepage_url": "https://vantag.es/",
  "icons": {
    "128": "icons/vitals128w.png",
    "256": "icons/vitals256w.png",
    "512": "icons/vitals512w.png"
  },
  "action": {
    "default_icon": "icons/vitals512w.png",
    "default_title": "Web Vitals",
    "default_popup": "src/browser_action/popup.html"
  },
  "options_page": "src/options/options.html",
  "host_permissions": ["*://*/*"],
  "permissions": ["tabs", "storage", "activeTab", "scripting", "webRequest"],
  "web_accessible_resources": [
    {
      "resources": [
        "src/browser_action/viewer.css",
        "src/browser_action/web-vitals.js",
        "src/browser_action/on-each-interaction.js"
      ],
      "matches": ["*://*/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["src/browser_action/viewer.css"],
      "js": ["src/browser_action/lodash-debounce-custom.js"]
    }
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "default-src 'self'; connect-src https://chromeuxreport.googleapis.com https://ipwhois.app https://dns.google https://http-observatory.security.mozilla.org https://securityheaders.com;"
  }
}
